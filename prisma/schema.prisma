generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String 
  img          String[]
  category     String 
}

model Category {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique
  img  String[]
}

 

model Review {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  date        DateTime @default(now()) @db.Date
}


model Brand {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId 
  img  String[]
}
